<div class="row" style="margin-top: 100px;">
  <h3 class="col-xs-12">Showing results for:
    <%= params[:query] %></h3>
</div>

<div class="row">
  <div class="col-xs-12 col-md-4">
    <h4>New Search</h4>
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_tag(results_path, method: "post") do %>
          <div class="form-group">
            <h4><%= label_tag(:query, "Search for:") %></h4>
            <%= text_field_tag(:query, "", :placeholder => "A search query",
              :class => "form-control") %>
          </div>
          <%= submit_tag("Search", :class => "btn btn-lg btn-primary submit") %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-4 list-group">
    <h4>HashTags</h4>
    <% Hash[@hash.sort_by(&:last).reverse].each do |key, value| %>
      <li class="list-group-item"><span class="badge alert-info"><%= value %></span> <%= key %></li>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-4 list-group">
    <h4>@Mentions</h4>
    <% Hash[@mentions.sort_by(&:last).reverse].each do |key, value| %>
      <li class="list-group-item"><span class="badge alert-info"><%= value %></span> <%= key %></li>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 list-group">
    <% @test.each do |hashtag| %>
      <li class='list-group-item'>
        <%= highlight(hashtag.text, params[:query]) %>
      </li>
    <% end %>
  </div>
</div>
